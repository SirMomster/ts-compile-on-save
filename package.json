{
	"name": "tscompileonsave",
	"displayName": "TSCompileOnSave",
	"description": "Auto compile Typescript on saving a file",
	"version": "0.1.0",
	"engines": {
		"vscode": "^1.40.0"
	},
	"publisher": "mommemi",
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onCommand:extension.build",
		"onLanguage:typescript"
	],
	"main": "./dist/extension",
	"contributes": {
		"commands": [
			{
				"command": "extension.build",
				"title": "Typescript build for current file"
			}
		],
		"configuration": {
			"title": "TSCompileOnSave",
			"properties": {
				"tsCompileOnSave.enabled": {
					"type": "boolean",
					"default": true,
					"description": "Disable or enable compile on save"
				}
			}
		}
	},
	"scripts": {
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile",
		"test": "node ./out/test/runTest.js",
		"vscode:prepublish": "webpack --mode production",
		"webpack": "webpack --mode development",
		"webpack-dev": "webpack --mode development --watch",
		"test-compile": "tsc -p ./"
	},
	"devDependencies": {
		"@types/glob": "^7.1.1",
		"@types/lodash": "^4.14.149",
		"@types/mocha": "^5.2.7",
		"@types/node": "^12.11.7",
		"@types/vscode": "^1.40.0",
		"glob": "^7.1.5",
		"mocha": "^6.2.2",
		"ts-loader": "^6.2.1",
		"tslint": "^5.20.0",
		"typescript": "^3.6.4",
		"vscode-test": "^1.2.2",
		"webpack": "^4.41.2",
		"webpack-cli": "^3.3.10"
	},
	"dependencies": {
		"lodash": "^4.17.15",
		"vscode-languageserver": "^5.2.1",
		"vscode-uri": "^2.1.1"
	}
}
